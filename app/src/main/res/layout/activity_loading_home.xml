<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    tools:context=".LoadingHomeActivity">

    <ImageView
        android:id="@+id/imageViewCocoaSide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/cocoa_side"/>

    <ImageView
        android:id="@+id/imageViewYeoulSide"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/yeoul_side" />

    <ImageView
        android:id="@+id/imageViewAppleSide"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/apple_side"/>

    <Button
        android:id="@+id/finalHomeButton"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00ff0000"
        android:layout_weight="1"
        android:text="집으로 가기 >>"
        android:textColor="#000000"
        android:textSize="15pt"
        android:textStyle="bold" />

</LinearLayout>